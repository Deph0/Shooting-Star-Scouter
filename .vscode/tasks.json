{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Gradle: build",
      "type": "shell",
      "command": "${workspaceFolder}\\gradlew.bat",
      "args": [
        "build",
        "--stacktrace",
        // "--info",
        // "--debug",
        
        // "--scan",
        // "--no-daemon"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
